<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js'></script>
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css' rel='stylesheet' />
  <!-- google fonts links -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- --- -->
  <link rel="stylesheet" href="/css/index.css"> <!-- css file link -->
  <link rel="stylesheet" href="/css/profile.css"> <!-- css file link -->
  <title>BaturiPet</title>
</head>

<body>
  <%- include('../includes/header.ejs') %>
  <main>
    <aside>
      <nav>
        <ul class="aside-menu">
          <div class="menu-start">
            <li class="aside-menu__item">
              <a href="/" class="aside-menu__link">
                <img src="/images/feed/home.png" alt="Ícone de casa" class="aside-menu__icon">
                Página inicial
              </a>
            </li>
            <li class="aside-menu__item">
              <a href="/client/inbox" class="aside-menu__link">
                <img src="/images/feed/chatting.png" alt="Ícone de mensagem" class="aside-menu__icon">
                Caixa de mensagens
              </a>
            </li>
            <li class="aside-menu__item">
              <a href="/enterprises" class="aside-menu__link">
                <img src="/images/feed/petshop.png" alt="Ícone de empresa" class="aside-menu__icon">
                Empresas
              </a>
            </li>
            <li class="aside-menu__item">
              <a href="/user/notifications" class="aside-menu__link">
                <img src="/images/feed/notification.png" alt="Ícone de sino" class="aside-menu__icon">
                Notificações
              </a>
            </li>
            <li class="aside-menu__item">
              <a href=<%= `/${type}/profile` %> class="aside-menu__link">
                <img src="/images/feed/setting.png" alt="Ícone de engrenagem" class="aside-menu__icon">
                Configurações
              </a>
            </li>
            <li class="aside-menu__item menu-end__item">
              <a href=<%= `/${type}/profile` %> class="aside-menu__link aside-menu__link--profile aside-menu__link--sth">
                <img src="/images/person-circle.svg" alt="Ícone de usuário" class="aside-menu__icon">
                Perfil
              </a>
            </li>
          </div>
          <div class="menu-end">
            <li class="aside-menu__item">
              <a href=<%= `/${type}/profile` %> class="aside-menu__link aside-menu__link--profile aside-menu__link--sth">
                <img src="/images/person-circle.svg" alt="Ícone de usuário" class="aside-menu__icon">
                Perfil
              </a>
            </li>
          </div>
        </ul>
      </nav>
    </aside>

    <article class="user">
      <section class="infors">
        <div class="infors__flex">
          <div class="infors__container">
            <div class="flex-column">
              <img src=<%= profilePic %> alt="Imagem de perfil do usuário" class="infors__profile-pic">
            </div>
            <div class="flex-column">
              <h2 class="infors__name">
                <%= name %>
              </h2>
              <a href=<%= `/profile/${username}` %> class="infors__username">
                <%= username %>
              </a>
              <ul class="infors__statistics">
                <li class="infors__statistic">
                  <strong>
                    <%= publications.length %>
                  </strong>
                  Publicações
                </li>
              </ul>
            </div>
          </div>
          <div class="flex-column">
            <a href="/client/publish" class="button">Publicar</a>
          </div>
        </div>
      </section>
      <section class="publications">
        <h2 class="publications__title">Publicações</h2>
        <div class="publications__grid">
          <% for (publication of publications) { %>
            <div class="publication">
              <div class="publication__actions">
                <a href=<%= `/client/edit/${publication.id}` %> class="button">Editar</a>
                <a href=<%= `/client/delete/${publication.id}` %> class="button">Excluir</a>
              </div>
              <img src=<%= publication.imagePath %> alt="Imagem da publicação" class="publication__image">
              <footer>
                <p class="publication__description">
                  <%= publication.description %>
                </p>
              </footer>
            </div>
          <% } %>
        </div>
      </section>
    </article>
  </main>

  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</body>

</html>